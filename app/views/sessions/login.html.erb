<div class="top">
    <div class="top_wrapper">
        Picnic
        <%= button_to "Create New", root_path, method: :get, :class => "button" %>
    </div>
</div>
<div class="wrapper">
  <div class="form_wrapper">
    <h1>Login</h1>
    <%= form_tag "/login" do %>
        <%= text_field_tag :name, nil, placeholder: "Event Name" %><br><br>
        <%= password_field_tag :password, nil, placeholder: "Password" %><br><br>
        <% if flash[:error] %>
            <div class="error"><%= flash[:error] %></div>
        <% end %>
        <%= submit_tag "Log In" %>
    <% end %><br>
  </div>
</div>